{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "J",
  "scopeName": "source.j",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#decorators" },
    { "include": "#functions" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#constants" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.j",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.j",
          "match": "\\b(if|else|elif|while|for|in|break|continue|return|yield|match|case|defer|converge|within|rollback|retry|race|secure|task)\\b"
        },
        {
          "name": "keyword.other.j",
          "match": "\\b(fn|class|trait|module|import|use|export|async|await|pub|priv)\\b"
        },
        {
          "name": "keyword.operator.j",
          "match": "\\b(and|or|not|is|as)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.j",
          "match": "\\b(int|float|str|bool|list|dict|set|tuple|counter|grid|range|any|none)\\b"
        }
      ]
    },
    "decorators": {
      "patterns": [
        {
          "name": "entity.name.function.decorator.j",
          "match": "@\\w+"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.j",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.j",
          "match": "\\b(out|print|len|sum|max|min|abs|round|floor|ceil|sqrt|pow|range|map|filter|reduce|zip|enumerate|sorted|reversed|all|any|str|int|float|bool|list|dict|set|tuple|type|isinstance|hasattr|getattr|setattr|open|read|write|close)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.j",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.j",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.j",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.j",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.j",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.j",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.hex.j",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.j",
          "match": "\\b0b[01]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.j",
          "match": "\\+|\\-|\\*|\\/|%|\\*\\*"
        },
        {
          "name": "keyword.operator.comparison.j",
          "match": "==|!=|<|>|<=|>="
        },
        {
          "name": "keyword.operator.logical.j",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.j",
          "match": "->|="
        },
        {
          "name": "keyword.operator.pipeline.j",
          "match": "\\|>|\\."
        },
        {
          "name": "keyword.operator.type.j",
          "match": "\\|"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.j",
          "match": "\\b(true|false|none|null)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.j",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
