{
  "name": "j-lang",
  "displayName": "J Language",
  "description": "Official J Programming Language support for VS Code",
  "version": "0.1.0",
  "publisher": "j-lang",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "j",
    "j-lang",
    "j language",
    "programming language"
  ],
  "activationEvents": [
    "onLanguage:j"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "j",
        "aliases": [
          "J",
          "j-lang"
        ],
        "extensions": [
          ".j"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/file-icon.png",
          "dark": "./images/file-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "j",
        "scopeName": "source.j",
        "path": "./syntaxes/j.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "j",
        "path": "./snippets/j.json"
      }
    ],
    "themes": [
      {
        "label": "J Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/j-dark.json"
      },
      {
        "label": "J Light",
        "uiTheme": "vs",
        "path": "./themes/j-light.json"
      }
    ],
    "commands": [
      {
        "command": "j-lang.runFile",
        "title": "J: Run Current File",
        "icon": "$(play)"
      },
      {
        "command": "j-lang.runREPL",
        "title": "J: Start REPL",
        "icon": "$(terminal)"
      },
      {
        "command": "j-lang.checkSyntax",
        "title": "J: Check Syntax"
      },
      {
        "command": "j-lang.buildProject",
        "title": "J: Build Project"
      },
      {
        "command": "j-lang.newProject",
        "title": "J: New Project"
      },
      {
        "command": "j-lang.formatDocument",
        "title": "J: Format Document"
      }
    ],
    "keybindings": [
      {
        "command": "j-lang.runFile",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == j"
      },
      {
        "command": "j-lang.runREPL",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorLangId == j"
      },
      {
        "command": "j-lang.formatDocument",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorLangId == j"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "j-lang.runFile",
          "when": "resourceLangId == j",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "j-lang.runFile",
          "when": "resourceLangId == j",
          "group": "j-lang"
        },
        {
          "command": "j-lang.checkSyntax",
          "when": "resourceLangId == j",
          "group": "j-lang"
        }
      ]
    },
    "configuration": {
      "title": "J Language",
      "properties": {
        "j-lang.executablePath": {
          "type": "string",
          "default": "j",
          "description": "Path to J executable"
        },
        "j-lang.enableLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax checking"
        },
        "j-lang.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Format document on save"
        },
        "j-lang.showOutputOnRun": {
          "type": "boolean",
          "default": true,
          "description": "Show output panel when running files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/j-lang/j"
  },
  "bugs": {
    "url": "https://github.com/j-lang/j/issues"
  },
  "homepage": "https://github.com/j-lang/j#readme",
  "license": "MIT"
}
